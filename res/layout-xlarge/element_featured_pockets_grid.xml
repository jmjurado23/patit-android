<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeelementpocket"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/homelistbutton"
    android:orientation="vertical"
    tools:context=".activities.SelectNewElementTypeActivity" >

    <ImageView
        android:id="@+id/imageViewPocketGrid"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/miscpocket"
        android:src="@drawable/homelistbutton" />

    <LinearLayout
        android:id="@+id/relativeYourPocket"
        android:layout_width="14dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:background="@drawable/yellowbordergrid" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeYourPocketGridBlue"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/relativeYourPocket"
        android:background="#222222"
        android:paddingRight="6dp" >

        <CheckedTextView
            android:id="@+id/textViewTitlePocketGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/pocket"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textViewUserPocketGrid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/textViewTitlePocketGrid"
            android:layout_below="@+id/textViewTitlePocketGrid"
            android:layout_toLeftOf="@+id/textViewNElementsPocketGrid"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/yellowdark" />

        <TextView
            android:id="@+id/textViewNElementsPocketGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewUserPocketGrid"
            android:layout_alignBottom="@+id/textViewUserPocketGrid"
            android:layout_alignParentRight="true"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/yellowdark" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textYourGridNewComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00CC0000"
        android:padding="4dp"
        android:shadowColor="#000000"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:text="0 Comments"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#00ffffff" />

    <ImageView
        android:id="@+id/imageViewFeaturedGrid"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/featured_icon"
        android:textColor="#ffffff" />

</RelativeLayout>