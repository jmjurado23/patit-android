<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/back_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#33b5e5"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:padding="6dp" >

            <TextView
                android:id="@+id/textViewTitleDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:text="@string/pocket"
                android:textAppearance="?android:attr/listSeparatorTextViewStyle" />

            <TextView
                android:id="@+id/lineDesc"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textViewTitleDesc"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:paddingTop="5dip" />

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewTitleDesc"
                android:layout_alignTop="@+id/lineDesc"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nameDescPocket"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textViewNameDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:scrollHorizontally="true"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:text="LargeText"
                    android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout1"
                android:layout_below="@+id/layout1"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >
				
                 <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usernameDescPock"
             
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textViewUserDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:text="LargeText"
                    android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout2"
                android:layout_below="@+id/layout2"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

                <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/typeDescPocket"
                android:textAppearance="?android:attr/textAppearanceSmall" />

                 <TextView
                android:id="@+id/textViewThemeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="Large Text"
                android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout3"
                android:layout_below="@+id/layout3"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >
	
                <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numberObjectsDescPocket"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                <TextView
                android:id="@+id/TextViewNumberObjectDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
                android:text="Large Text"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium" />
                
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout4"
                android:layout_below="@+id/layout4"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >
				
                 <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/numberCommentsDescPocket"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                 <TextView
                android:id="@+id/TextViewNumberCommentDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
                android:text="Large Text"
                android:textColor="#ffffff"
               android:textAppearance="?android:attr/textAppearanceMedium" />
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout5"
                android:layout_below="@+id/layout5"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

				<TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/createDateDescPocket"
                android:textAppearance="?android:attr/textAppearanceSmall" />

                 <TextView
                android:id="@+id/textViewCreateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
                android:text="Large Text"
                android:textColor="#ffffff"
                android:textAppearance="?android:attr/textAppearanceSmall" />
                
                
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/layout7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout6"
                android:layout_below="@+id/layout6"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/votesDescPock"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

					<ImageView
	                android:id="@+id/textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/createDateDescPocket"
	                android:src="@drawable/goodicon" />
	
	                 <TextView
	                android:id="@+id/textViewPosVotesDesc"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                
	                android:text="Large Text"
	                android:layout_marginRight="8dp"
	                android:scrollHorizontally="true"
	                android:textColor="#ffffff"
	                android:textAppearance="?android:attr/textAppearanceMedium" />
	                <ImageView
	                android:id="@+id/textView"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/createDateDescPocket"
	                android:src="@drawable/badicon" />
	
	                 <TextView
	                android:id="@+id/textViewNegVotesDesc"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Large Text"
	                android:scrollHorizontally="true"
	                android:textColor="#ffffff"
               	 android:textAppearance="?android:attr/textAppearanceMedium" />
                
                
	                 
            </LinearLayout>

				<ImageView
				    android:id="@+id/imageViewDescrPocket"
				    android:layout_width="150dp"
				    android:layout_height="150dp"
				    android:layout_alignRight="@+id/layout7"
				    android:layout_below="@+id/layout7"
				    android:adjustViewBounds="true"
				    android:scaleType="fitXY" />
             
        </RelativeLayout>



</RelativeLayout>
