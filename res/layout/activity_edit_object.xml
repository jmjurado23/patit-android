<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_white"
    tools:context=".NewPocketActicity" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:background="#99CC00" >
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:text="@string/editobject"
            android:textAppearance="?android:attr/listSeparatorTextViewStyle" />
		<TextView
            android:id="@+id/line"
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:paddingTop="5dip" />

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="16dp"
		    android:layout_marginRight="16dp"
		    android:layout_marginTop="5dp"
		    android:orientation="vertical" >

		    <TextView
		        android:id="@+id/TextView01"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/writenewobjectname" />

		    <EditText
		        android:id="@+id/editTextNameObject"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/newnameobjectnamedefault" >

		        <requestFocus />
		    </EditText>

		    <TextView
		        android:layout_marginTop="6dp"
		        android:id="@+id/cfgLblWriteDescriptionObject"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/writenewdescriptionobject" />

		    <EditText
		        android:id="@+id/editTextDescriptionObject"
		        android:layout_width="match_parent"
		        android:layout_height="130dp"
		        android:ems="10"
		        android:gravity="top"
		        android:hint="@string/writenewdescriptionobjectdefault" />
		    
		    <TextView
		        android:layout_marginTop="6dp"
		        android:id="@+id/cfgLblPocketObject"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/pocket_name" />

		    
		    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textViewPocketEditObject"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/buttonEditPocket"
                        android:gravity="center"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:text="@string/miscellaneous_theme"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/buttonEditPocket"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/editicon" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >

		        <Button
		            android:id="@+id/buttonEditObjectType"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:layout_alignParentTop="true" />

		        <TextView
		            android:id="@+id/textViewPreviewNewObject"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_toRightOf="@+id/buttonEditObjectType"
		            android:text="Small Text"
		            android:textAppearance="?android:attr/textAppearanceSmall" />

		    </RelativeLayout>

		    <Button
		        android:id="@+id/cfgBtnNewObject"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/sendComment" />

		</LinearLayout>

    </LinearLayout>
	
</LinearLayout>

</FrameLayout>